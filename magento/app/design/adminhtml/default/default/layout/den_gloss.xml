	</gloss_admin_manage_gloss_new>		
	<gloss_admin_manage_comment_index>
        <reference name="content">
            <block type="gloss/manage_comment" name="comment" />
        </reference>
    </gloss_admin_manage_comment_index>
	<gloss_admin_manage_cat_index>
        <reference name="content">
            <block type="gloss/manage_cat" name="cat" />
        </reference>
    </gloss_admin_manage_cat_index>
