<?xml version="1.0"?>
<config>
    <modules>
        <Den_Job>
            <version>1.1</version>
        </Den_Job>
    </modules>
    <admin>
        <routers>
            <job_admin>
                <use>admin</use>
                <args>
                    <module>Den_Job</module>
                    <frontName>job_admin</frontName>
                </args>
            </job_admin>
        </routers>
    </admin>
    <frontend>
        <routers>
            <job>
                <use>standard</use>
                <args>
                    <module>Den_Job</module>
                    <frontName>job</frontName>
                </args>
            </job>
        </routers>
        <layout>
            <updates>
                <job module="Den_Job">
                    <file>den_job.xml</file>
                </job>
            </updates>
        </layout>
        <translate>
            <modules>
                <Den_Job>
                    <files>
                        <default>Den_Job.csv</default>
                    </files>
                </Den_Job>
            </modules>
        </translate>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Den_Job>
                    <files>
                        <default>Den_Job.csv</default>
                    </files>
                </Den_Job>
            </modules>
        </translate>

        <menu>
            <job module="job">
                <title>Job</title>
                <sort_order>71</sort_order>               
                <children>
                    <new module="job">
                        <title>Add Post</title>
                        <sort_order>0</sort_order>
                        <action>job_admin/manage_job/new</action>
                    </new>					
                    <posts module="job">
                        <title>Posts</title>
                        <sort_order>10</sort_order>
                        <action>job_admin/manage_job/index</action>
                    </posts>
                    <comment module="job">
                        <title>Comments</title>
                        <sort_order>20</sort_order>
                        <action>job_admin/manage_comment</action>
                    </comment>
                    <cat module="job">
                        <title>Categories</title>
                        <sort_order>30</sort_order>
                        <action>job_admin/manage_cat</action>
                    </cat>
                    <settings translate="title" module="job">
                        <title>Settings</title>
                        <action>adminhtml/system_config/edit/section/job</action>
                        <sort_order>40</sort_order>
                    </settings>
                </children>
            </job>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <job>
                            <title>Job</title>
                            <sort_order>70</sort_order>
                            <children>
                                <posts>
                                    <title>Manage Posts</title>
                                    <sort_order>0</sort_order>
                                </posts>
                                <comment>
                                    <title>Manage Comments</title>
                                    <sort_order>1</sort_order>
                                </comment>
                                <cat>
                                    <title>Manage Categories</title>
                                    <sort_order>2</sort_order>
                                </cat>
                            </children>
                        </job>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <job>
                                            <title>aheadWorks Blog Section</title>
                                        </job>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <job module="Den_Job">
                    <file>den_job.xml</file>
                </job>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <job>
                <class>Den_Job_Model</class>
                <resourceModel>job_mysql4</resourceModel>
            </job>
            <job_mysql4>
                <class>Den_Job_Model_Mysql4</class>
                <entities>
                    <job>
                        <table>den_job</table>
                    </job>
                    <post>
                        <table>den_job</table>
                    </post>
                    <comment>
                        <table>den_job_comment</table>
                    </comment>
                    <cat>
                        <table>den_job_cat</table>
                    </cat>
                    <post_cat>
                        <table>den_job_post_cat</table>
                    </post_cat>
                    <store>
                        <table>den_job_store</table>
                    </store>
                    <cat_store>
                        <table>den_job_cat_store</table>
                    </cat_store>
                    <tag>
                        <table>den_job_tags</table>
                    </tag>


                    <ljob> 
                        <table>job</table>
                    </ljob>
                    <lpost>
                        <table>job</table>
                    </lpost>
                    <lcomment>
                        <table>job_comment</table>
                    </lcomment>
                    <lcat>
                        <table>job_cat</table>
                    </lcat>
                    <lpost_cat>
                        <table>job_post_cat</table>
                    </lpost_cat>
                    <lstore>
                        <table>job_store</table>
                    </lstore>

                    <lcat_store>
                        <table>job_cat_store</table>
                    </lcat_store>                

                </entities>
            </job_mysql4>
            <sitemap>
                <rewrite>
                    <sitemap>Den_Job_Model_Sitemap</sitemap>
                </rewrite>
            </sitemap>
        </models>
        <blocks>
            <job>
                <class>Den_Job_Block</class>
            </job>
            <rss>
                <rewrite></rewrite>
                <drewrite>
                    <list>Den_Job_Block_Rss_List</list>
                </drewrite>
            </rss>
        </blocks>
        <resources>
            <job_setup>
                <setup>
                    <module>Den_Job</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </job_setup>
            <job_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </job_write>
            <job_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </job_read>
        </resources>
        <helpers>
            <job>
                <class>Den_Job_Helper</class>
            </job>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <job>
                        <type>singleton</type>
                        <class>Den_Job_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </job>
                </observers>
            </controller_front_init_routers>
            <controller_action_predispatch>
                <observers>
                    <job>
                        <type>singleton</type>
                        <class>job/observer</class>
                        <method>rewriteRssList</method>
                    </job>
                </observers>
            </controller_action_predispatch>
            <sitemap_add_xml_block_to_the_end>
                <observers>
                    <add_job_section>
                        <type>singleton</type>
                        <class>job/observer</class>
                        <method>addBlogSection</method>
                    </add_job_section>
                </observers>
            </sitemap_add_xml_block_to_the_end>
            <http_response_send_before>
                <observers>
                    <modifyheader>
                        <type>singleton</type>
                        <class>job/observer</class>
                        <method>provideIE9Compatibility</method>
                    </modifyheader>
                </observers>
            </http_response_send_before>
        </events> 
        <template>
            <email>
                <job_comments_email_template translate="label" module="job">
                    <label>Comment Submitted</label>
                    <file>den_job/comment_submitted.html</file>
                    <type>text</type>
                </job_comments_email_template>
            </email>
        </template>
    </global>


    <default>
        <sitemap>
            <job>
                <changefreq>weekly</changefreq>
                <priority>0.5</priority>
            </job>
        </sitemap>
        <job>
            <job>
                <enabled>1</enabled>
                <title>Blog</title>
                <footerEnabled>1</footerEnabled>
                <menuRight>1</menuRight>
                <topEnabled>1</topEnabled>
                <jobcrumbs>1</jobcrumbs>
                <recent>5</recent>
                <dateformat>full</dateformat>
                <layout>page/2columns-right.phtml</layout>
                <comments>1</comments>
                <useshortcontent>1</useshortcontent>
                <rss>1</rss>
                <rssimage>images/BlogLogo.png</rssimage>
                <userte>1</userte>
                <parse_cms>0</parse_cms>
                <categories_urls>1</categories_urls>
            </job>
            <comments>
                <page_count>10</page_count>
            </comments>
            <menu>
                <category>1</category>
                <tagcloud_size>10</tagcloud_size>
            </menu>
        </job>
    </default>
    
     <phpunit>
        <suite>
            <modules>
                <Den_Job />
            </modules>
        </suite>
    </phpunit>

    
    
</config>
