<?xml version="1.0"?>
<config>
    <modules>
        <Den_Stock>
            <version>1.1</version>
        </Den_Stock>
    </modules>
    <admin>
        <routers>
            <stock_admin>
                <use>admin</use>
                <args>
                    <module>Den_Stock</module>
                    <frontName>stock_admin</frontName>
                </args>
            </stock_admin>
        </routers>
    </admin>
    <frontend>
        <routers>
            <stock>
                <use>standard</use>
                <args>
                    <module>Den_Stock</module>
                    <frontName>stock</frontName>
                </args>
            </stock>
        </routers>
        <layout>
            <updates>
                <stock module="Den_Stock">
                    <file>den_stock.xml</file>
                </stock>
            </updates>
        </layout>
        <translate>
            <modules>
                <Den_Stock>
                    <files>
                        <default>Den_Stock.csv</default>
                    </files>
                </Den_Stock>
            </modules>
        </translate>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Den_Stock>
                    <files>
                        <default>Den_Stock.csv</default>
                    </files>
                </Den_Stock>
            </modules>
        </translate>

        <menu>
            <stock module="stock">
                <title>Stock</title>
                <sort_order>71</sort_order>               
                <children>
                    <new module="stock">
                        <title>Add Post</title>
                        <sort_order>0</sort_order>
                        <action>stock_admin/manage_stock/new</action>
                    </new>					
                    <posts module="stock">
                        <title>Posts</title>
                        <sort_order>10</sort_order>
                        <action>stock_admin/manage_stock/index</action>
                    </posts>
                    <comment module="stock">
                        <title>Comments</title>
                        <sort_order>20</sort_order>
                        <action>stock_admin/manage_comment</action>
                    </comment>
                    <cat module="stock">
                        <title>Categories</title>
                        <sort_order>30</sort_order>
                        <action>stock_admin/manage_cat</action>
                    </cat>
                    <settings translate="title" module="stock">
                        <title>Settings</title>
                        <action>adminhtml/system_config/edit/section/stock</action>
                        <sort_order>40</sort_order>
                    </settings>
                </children>
            </stock>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <stock>
                            <title>Stock</title>
                            <sort_order>70</sort_order>
                            <children>
                                <posts>
                                    <title>Manage Posts</title>
                                    <sort_order>0</sort_order>
                                </posts>
                                <comment>
                                    <title>Manage Comments</title>
                                    <sort_order>1</sort_order>
                                </comment>
                                <cat>
                                    <title>Manage Categories</title>
                                    <sort_order>2</sort_order>
                                </cat>
                            </children>
                        </stock>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <stock>
                                            <title>aheadWorks Blog Section</title>
                                        </stock>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <stock module="Den_Stock">
                    <file>den_stock.xml</file>
                </stock>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <stock>
                <class>Den_Stock_Model</class>
                <resourceModel>stock_mysql4</resourceModel>
            </stock>
            <stock_mysql4>
                <class>Den_Stock_Model_Mysql4</class>
                <entities>
                    <stock>
                        <table>den_stock</table>
                    </stock>
                    <post>
                        <table>den_stock</table>
                    </post>
                    <comment>
                        <table>den_stock_comment</table>
                    </comment>
                    <cat>
                        <table>den_stock_cat</table>
                    </cat>
                    <post_cat>
                        <table>den_stock_post_cat</table>
                    </post_cat>
                    <store>
                        <table>den_stock_store</table>
                    </store>
                    <cat_store>
                        <table>den_stock_cat_store</table>
                    </cat_store>
                    <tag>
                        <table>den_stock_tags</table>
                    </tag>


                    <lstock> 
                        <table>stock</table>
                    </lstock>
                    <lpost>
                        <table>stock</table>
                    </lpost>
                    <lcomment>
                        <table>stock_comment</table>
                    </lcomment>
                    <lcat>
                        <table>stock_cat</table>
                    </lcat>
                    <lpost_cat>
                        <table>stock_post_cat</table>
                    </lpost_cat>
                    <lstore>
                        <table>stock_store</table>
                    </lstore>

                    <lcat_store>
                        <table>stock_cat_store</table>
                    </lcat_store>                

                </entities>
            </stock_mysql4>
            <sitemap>
                <rewrite>
                    <sitemap>Den_Stock_Model_Sitemap</sitemap>
                </rewrite>
            </sitemap>
        </models>
        <blocks>
            <stock>
                <class>Den_Stock_Block</class>
            </stock>
            <rss>
                <rewrite></rewrite>
                <drewrite>
                    <list>Den_Stock_Block_Rss_List</list>
                </drewrite>
            </rss>
        </blocks>
        <resources>
            <stock_setup>
                <setup>
                    <module>Den_Stock</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </stock_setup>
            <stock_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </stock_write>
            <stock_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </stock_read>
        </resources>
        <helpers>
            <stock>
                <class>Den_Stock_Helper</class>
            </stock>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <stock>
                        <type>singleton</type>
                        <class>Den_Stock_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </stock>
                </observers>
            </controller_front_init_routers>
            <controller_action_predispatch>
                <observers>
                    <stock>
                        <type>singleton</type>
                        <class>stock/observer</class>
                        <method>rewriteRssList</method>
                    </stock>
                </observers>
            </controller_action_predispatch>
            <sitemap_add_xml_block_to_the_end>
                <observers>
                    <add_stock_section>
                        <type>singleton</type>
                        <class>stock/observer</class>
                        <method>addBlogSection</method>
                    </add_stock_section>
                </observers>
            </sitemap_add_xml_block_to_the_end>
            <http_response_send_before>
                <observers>
                    <modifyheader>
                        <type>singleton</type>
                        <class>stock/observer</class>
                        <method>provideIE9Compatibility</method>
                    </modifyheader>
                </observers>
            </http_response_send_before>
        </events> 
        <template>
            <email>
                <stock_comments_email_template translate="label" module="stock">
                    <label>Comment Submitted</label>
                    <file>den_stock/comment_submitted.html</file>
                    <type>text</type>
                </stock_comments_email_template>
            </email>
        </template>
    </global>


    <default>
        <sitemap>
            <stock>
                <changefreq>weekly</changefreq>
                <priority>0.5</priority>
            </stock>
        </sitemap>
        <stock>
            <stock>
                <enabled>1</enabled>
                <title>Blog</title>
                <footerEnabled>1</footerEnabled>
                <menuRight>1</menuRight>
                <topEnabled>1</topEnabled>
                <stockcrumbs>1</stockcrumbs>
                <recent>5</recent>
                <dateformat>full</dateformat>
                <layout>page/2columns-right.phtml</layout>
                <comments>1</comments>
                <useshortcontent>1</useshortcontent>
                <rss>1</rss>
                <rssimage>images/BlogLogo.png</rssimage>
                <userte>1</userte>
                <parse_cms>0</parse_cms>
                <categories_urls>1</categories_urls>
            </stock>
            <comments>
                <page_count>10</page_count>
            </comments>
            <menu>
                <category>1</category>
                <tagcloud_size>10</tagcloud_size>
            </menu>
        </stock>
    </default>
    
     <phpunit>
        <suite>
            <modules>
                <Den_Stock />
            </modules>
        </suite>
    </phpunit>

    
    
</config>
